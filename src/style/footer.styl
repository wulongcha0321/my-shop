$border-color = #c9cdd4
$font-color = #1d2129
$title-color = rgb(29,33,41)

.footer-wrap
  position relative
  height 150px
  width: 100%
  
  .footer-container
    display flex
    align-items center
    position relative
    border-top 1px solid $border-color
    height 100%
    width 1280px
    margin 0 auto

    img
      height 32px
      width 32px
      cursor pointer

    .copy-wrap
      display flex
      justify-content space-between
      width 100%
      height 112px

      .news-wrap,.follow-wrap
        width 220px
        height 32px

      .news-wrap
        display flex
        align-items flex-end
        cursor pointer
        
        .news-text
          font-size 16px
          line-height 30px
          margin-left 5px
          font-weight: 600
          color $font-color
          letter-spacing 0.5px
      
      .content-wrap
        display flex
        justify-content space-around
        width 640px
        height 100%

        .item
          width 160px
          height 112px

          .title
            color $title-color
            font-size 16px
            font-weight: 700
            line-height: 24px

          .links
            margin-top 16px

            .link
              height 36px
              font-size: 14px
              font-weight 400
              line-height 20px
              cursor pointer
              
              &:hover
                text-decoration: underline

      .follow-wrap
        .follow-title
          font-size 16px
          font-weight: 700
          color $title-color
          line-height 24px
          margin-bottom 10px

        .follow-links
          img
            height 24px
            width 24px
            margin-right 5px
